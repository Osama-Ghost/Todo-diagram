<Window x:Class="ToDoList.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800"        WindowStartupLocation="CenterScreen"
        Background="#FF1C1C1C">
    <Grid>


        <DataGrid  Margin="0,83,0,0"
                  x:Name="display"
                  AutoGenerateColumns="True"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch" 
                   ItemsSource="{Binding Tasks}"/>
        <Button Content="Add Task" HorizontalAlignment="Left" Margin="50,34,0,0" VerticalAlignment="Top" Background="White" BorderBrush="White" FontFamily="Cascadia Code" FontSize="24" Click="Button_Click_1"/>
        <Button Content="Delete Task" HorizontalAlignment="Left" Margin="266,34,0,0" VerticalAlignment="Top" Background="White" BorderBrush="White" FontFamily="Cascadia Code" FontSize="24" Click="Button_Click"/>
        <Button Content="Update Task" HorizontalAlignment="Left" Margin="509,34,0,0" VerticalAlignment="Top" Background="White" BorderBrush="White" FontFamily="Cascadia Code" FontSize="24" Click="Button_Click_2"/>
    </Grid>
</Window>
